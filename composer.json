{
    "name": "fusion/framework",
    "description": "Custom PHP Framework - Hybrid MVC + Modular + Service Layer",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Fusion Team",
            "email": "team@fusionframework.dev"
        }
    ],
    "require": {
        "php": ">=7.4",
        "predis/predis": "^2.0",
        "pheanstalk/pheanstalk": "^4.0",
        "php-amqplib/php-amqplib": "^3.0",
        "aws/aws-sdk-php": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Fusion\\Core\\": "core/",
            "App\\": "app/",
            "Fusion\\Plugins\\": "plugins/",
            "Flexify\\Core\\": "core/"  
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "fusion": {
            "version": "1.1.0",
            "framework": true
        }
    }
}
