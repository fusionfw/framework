{
    "name": "mwpn/fusion-framework",
    "description": "Fusion Framework - Simple to Start, Powerful to Scale. Hybrid MVC, Modular Architecture, Service Layer, and Enterprise Queue System.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Fusion Team",
            "email": "fusion@btekno.cloud"
        }
    ],
    "require": {
        "php": ">=8.0",
        "predis/predis": "^2.0",
        "pheanstalk/pheanstalk": "^4.0",
        "php-amqplib/php-amqplib": "^3.0",
        "aws/aws-sdk-php": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Fusion\\": "src/",
            "App\\": "app/",
            "Fusion\\Plugins\\": "plugins/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
