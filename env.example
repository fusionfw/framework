# ===========================================
# FUSION FRAMEWORK - ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=FusionFramework
APP_MODE=lite
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_VERSION=1.0.0

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_NAME=_token
CSRF_TOKEN_LIFETIME=3600

# Password Hashing
PASSWORD_ALGO=PASSWORD_ARGON2ID
PASSWORD_MEMORY_COST=65536
PASSWORD_TIME_COST=4
PASSWORD_THREADS=3

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Session Security
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Supported drivers: mysql, sqlite, pgsql
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=fusion_framework
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# PostgreSQL Configuration (if using pgsql driver)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=fusion_framework
# DB_USERNAME=postgres
# DB_PASSWORD=your_password

# Database Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_POOL_TIMEOUT=30

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_DRIVER=file
CACHE_PREFIX=fusion_
CACHE_TTL=3600

# Redis Cache (if using redis driver)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DATABASE=0

# Memcached Cache (if using memcached driver)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# ===========================================
# SESSION CONFIGURATION
# ===========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

# ===========================================
# MAIL CONFIGURATION
# ===========================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@fusionframework.com
MAIL_FROM_NAME="Fusion Framework"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_MAX_FILES=5
LOG_MAX_SIZE=10485760

# Log Drivers: file, syslog, errorlog
LOG_DRIVER=file
LOG_PATH=storage/logs

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
QUEUE_DRIVER=file
QUEUE_PATH=storage/queue
QUEUE_FAILED_PATH=storage/queue/failed
QUEUE_RETRY_AFTER=90
QUEUE_MAX_TRIES=3
QUEUE_TIMEOUT=60

# Redis Queue (if using redis driver)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=
QUEUE_REDIS_QUEUE=fusion_jobs

# Beanstalk Queue (if using beanstalk driver)
BEANSTALK_HOST=127.0.0.1
BEANSTALK_PORT=11300
BEANSTALK_QUEUE=fusion_jobs

# RabbitMQ Queue (if using rabbitmq driver)
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_QUEUE=fusion_jobs

# Amazon SQS (if using sqs driver)
AWS_KEY=your-aws-access-key
AWS_SECRET=your-aws-secret-key
AWS_REGION=ap-southeast-1
SQS_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/123456789012/your-queue
SQS_FAILED_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/123456789012/your-queue-failed

# ===========================================
# FILESYSTEM CONFIGURATION
# ===========================================
FILESYSTEM_DRIVER=local
FILESYSTEM_DISK=local

# Storage Paths
STORAGE_PATH=storage
PUBLIC_PATH=public
UPLOAD_PATH=public/uploads
TEMP_PATH=storage/temp

# File Upload Settings
UPLOAD_MAX_SIZE=2048
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_OVERWRITE=false

# ===========================================
# PLUGIN CONFIGURATION
# ===========================================
PLUGIN_AUTO_LOAD=true
PLUGIN_CACHE_ENABLED=true
PLUGIN_PATH=plugins

# ===========================================
# BENCHMARK CONFIGURATION
# ===========================================
BENCHMARK_ENABLED=true
BENCHMARK_MEMORY_LIMIT=128M
BENCHMARK_TIME_LIMIT=30

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEV_SERVER_HOST=127.0.0.1
DEV_SERVER_PORT=8000
DEV_HOT_RELOAD=true
DEV_DEBUG_BAR=true

# ===========================================
# FRAMEWORK COMPATIBILITY
# ===========================================
FLEXIFY_COMPATIBILITY=true
HMF_COMPATIBILITY=true
FLIGHT_COMPATIBILITY=true

# ===========================================
# CLI CONFIGURATION
# ===========================================
CLI_DEFAULT_COMMAND=help
CLI_HMF_COMPATIBILITY=true
CLI_FLEXIFY_COMMANDS=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Set these in production
# APP_ENV=production
# APP_DEBUG=false
# SESSION_SECURE=true
# LOG_LEVEL=error
